@model TaskModel;

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" type="radio" name="Status" id="EmAndamento" value="Em Andamento" checked>
                    <label asp-for="Status" class="form-check-label" for="EmAndamento">Em andamento</label>
                </div>
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" type="radio" name="Status" id="Concluido" value="Concluído">
                    <label asp-for="Status" class="form-check-label" for="Concluido">Concluído</label>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">Data da Conclusão</label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary mt-2">Voltar para Lista</a>
</div>

